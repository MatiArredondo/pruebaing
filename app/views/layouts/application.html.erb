<%= render "templates/header"%>

  <body class="m-4">

    <% if user_signed_in? %>
      <%= render "layouts/nav_user_signed"%>

    <% else %>
      <%= render "layouts/nav_user_not_signed"%>

    <% end %>

    <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>

    <% if flash[:alert] %>
      <p class="alert"><%= flash[:alert] %></p>
    <% end %>

    <% session[:hide_buttons] = false %>

    <%= yield %>

  </body>

</html>
