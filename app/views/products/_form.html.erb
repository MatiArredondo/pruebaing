<div class="box mx-6 mr-6 is-align-self-center">

	<%= form_with(model: @product) do |form| %>

		<div class="field">
			<%= form.label :nombre, class: "label" %>
			<%= form.text_field :name, class: "input", placeholder: "Ingresa el Nombre", value: "" %>

			<% if @product.errors[:name].any? %>
				<p class="help is-danger"> No puede ser vacío </p>
			<% end %>

		</div>

		<div class="field">
			<%= form.label :precio, class: "label" %>
			<%= form.number_field :price, class: "input", placeholder: "Ingresa un Precio", min: 0, value: "" %>

			<% if @product.errors[:price].any? %>
				<p class="help is-danger"> No puede ser vacío </p>
			<% end %>

		</div>

		<div class="file has-name">
			<label class="file-label">
				<%= form.file_field :image, class: "file-input" %>
				<span class="file-cta">
					<span class="file-icon">
						<i class="fas fa-upload"></i>
					</span>

					<span class="file-label">
						Foto del Producto
					</span>
				</span>
			</label>
		</div>

		<br>

		<% if @product.name.present? %>

			<%= form.submit "Actualizar", class:"button is-primary" %>

		<% else %>
			<%= form.hidden_field :id_user, value: current_user.id %>
			<%= form.submit "Agregar", class:"button is-primary" %>

		<% end %>

	<% end %>

</div>
