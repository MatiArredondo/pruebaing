
<%="funciono"%>
<div class="content is-center has-text-centered is-size-5 mt-5">
	<h2>Productos</h2>
</div>

<% if user_signed_in? %>

	<% if current_user.admin? || current_user.moderator? %>

		<div class="content is-center has-text-centered mt-5">
			<span class="icon is-small">
				<%= link_to new_product_path, class: "button is-rounded is-primary" do %>
					<i class="fas fa-plus"></i>
				<% end %>
			</span>
		</div>

	<% end %>
<% end %>

<div class="box mx-6 my-5 is-align-self-center">
	<div class="table-container is-flex is-justify-content-center">
		<table class="table is-fullwidth is-centered">

			<thead>
				<tr>
				<th>Imagen</th>
				<th>Producto</th>
				<th>Precio</th>
				<th></th>
				</tr>
			</thead>

			<tbody>

				<% @products.each do |product| %>
                    <%if product.id_user == current_user.id %>
                        <tr>
                            <td>

                                <% if product.image.attached? %>

                                    <figure class="image is-96x96">
                                        <%= image_tag product.image, class:"is-96x96 has-background-white" %>
                                    </figure>

                                <% else %>

                                    <figure class="image is-96x96">
                                        <i class="fa-thin fa-image"></i>
                                    </figure>

                                <% end %>

                            </td>

                            <td><%= product.name %></td>
                            <td><%= product.price %></td>
                            <td>
                                <%= link_to product, class: "button is-white" do %>
                                    <span class="icon is-small">
                                        <i class="fas fa-eye"></i>
                                    </span>
                                <% end %>

                            </td>

                            <i class="fa-sharp fa-light fa-eye"></i>

                        </tr>
                    <%end %>
				<% end %>

			</tbody>
		</table>
</div>
